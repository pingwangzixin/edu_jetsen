<div>
	<style type="text/css">
		.zk_resourcePage {
			width: 852px;
			background: #fff;
			border-radius: 2px;
			box-shadow: 0px 1px 3px 1px rgba(41, 45, 47, 0.1);
		}

		.zk_res_top {
			height: 50px;
			padding: 0 20px 0 25px;
		}

		.visitorResTop {
			border-bottom: 2px #ddd solid;
		}

		.resTopBgDiv {
			width: 852px;
			height: 2px;
			background-color: #dddddd;
		}

		.zk_res_topleft {
			font-size: 16px;
			color: #333333;
		}

		.zk_res_topleft>div {
			float: left;
			padding-right: 24px;
			height: 23px;
			margin-top: 17px;
			border-right: 1px #ddd solid;
			cursor: pointer;
		}

		.zk_res_topleft>div:last-child {
			border-right: none;
			margin-left: 25px;
		}

		.visitorRes>div:last-child {
			margin-left: 0;
		}

		.activeType {
			color: #5093e1;
		}

		.zk_res_topright {
			margin: 7px 0;
			border-radius: 17px;
			background-color: #f5f5f5;
			width: 285px;
			font-size: 14px;
		}

		.zk_res_topright>input {
			border: none;
			outline: none;
			text-indent: 16px;
			height: 36px;
			line-height: 36px;
			background: none;
			width: 240px;
		}

		.zk_res_search {
			cursor: pointer;
		}

		.zk_res_btm {
			padding: 13px 20px 20px;
		}

		.zk_res_btmChange {
			overflow: hidden;
			margin-bottom: 9px;
		}

		.zk_res_btmChange li {
			font-size: 14px;
			line-height: 28px;
			letter-spacing: 2px;
			color: #282a2c;
			float: left;
			margin-right: 24px;
			cursor: pointer;
		}

		.zk_res_btmChange li:nth-of-type(1) {
			margin-right: 10px;
			cursor: default
		}

		.activeLi {
			background-color: #399fdf;
			border-radius: 4px;
			padding: 0 9px;
		}

		.zk_res_table {
			font-size: 14px;
			margin-bottom: 20px;

		}
		.zk_res_nothing{
			height: 628px;
			width: 852px;
			text-align: center;
		}
		.zk_res_nothing>img{
			margin-top: 135px;
			margin-bottom: 19px;
		}
		.zk_res_nothing>p{
			text-align: center;
			font-size: 24px;
			color: #666666;
		}
		.zk_res_table .zk_res_tableTitle {
			line-height: 40px;
			height: 40px;
			width: 812px;
			border: none;
			background-color: #f6f6f6;
		}

		.zk_res_tableTitle>div {
			width: 270px;
			float: left;
			text-align: center;
		}

		.zk_res_tableMain {
			border-bottom: 1px solid #ddd;
			overflow: hidden;
			cursor: pointer;
		}

		.zk_res_tableMain:hover {
			background: #f5f5f5;
		}

		.zk_res_tableMain>div {
			float: left;
			width: 270px;
			text-align: center;
			line-height: 1;
			padding: 17px 0 12px;
		}
	</style>
</div>

<div class="zk_resourcePage">
	<div class="zk_res_top">

		<div class="zk_res_topleft" ng-if="otherSpace != 1">
			<div ng-class="{'activeType':resType == '私有资源'}" ng-click="typeChange('私有资源')">
				<i class="iconfont icon-gerenziyuan"></i>
				<span>私有资源</span>
			</div>
			<div ng-class="{'activeType':resType == '公开资源'}" ng-click="typeChange('公开资源')">
				<i class="iconfont icon-gonggongziyuan"></i>
				<span>公开资源</span>
			</div>
		</div>

		<div class="zk_res_topleft visitorRes" ng-if="otherSpace == 1">
			<div class="activeType">
				<i class="iconfont icon-gerenziyuan"></i>
				<span>资源</span>
				<!-- <span>{{otherUserName}}的资源</span> -->
			</div>
		</div>

		<div class="zk_res_topright fr">
			<input type="text" placeholder="资源名称" ng-model="search">
			<i class="iconfont icon-sousuo zk_res_search" ng-click="searchHandle(search)"></i>
		</div>

	</div>
	<img ng-src="{{resTopBg}}" alt="" ng-if="otherSpace != 1">
	<div ng-if="otherSpace == 1" class="resTopBgDiv"></div>
	<div class="zk_res_btm">
		<div class="zk_res_btmChange">
			<ul>
				<li class="fl">
					资源格式：
				</li>
				<li ng-repeat=" (index,item) in resourceTypeArr" ng-class="{'activeLi':resourceTypeId == item.id}"
					ng-click="subChange(item.id)">
					{{item.name}}
				</li>

			</ul>
		</div>
		<div class="zk_res_table" ng-if="resTableData.length !== 0">
			<div class="zk_res_tableTitle">
				<div>资源名称</div>
				<div>上传时间</div>
				<div>资源大小</div>
			</div>
			<div ng-repeat="item in resTableData" class="zk_res_tableMain" ng-click="player(item.id)">
				<div>{{item.title}}</div><!--资源名称-->
				<div>{{item.createDate}}</div><!--上传时间-->
				<div>{{item.mr3}}</div><!--资源大小-->
			</div>
			<paging page="totalPageNumber" callback="variablePacke.pageNo"></paging>
		</div>
		
	</div>
	
	
	
	<div class="zk_res_nothing" ng-if="resTableData.length == 0">
		<img src="./img/zk-res-nothing.png" alt="">
		<p>暂无资源</p>
	</div>
</div>