.zxl_hide{
	display: none;
}
.zxl_input{
	width: 185px;
    height: 31px;
    color: #999999;
	border: 1px solid #ccc;
}

.hb_have{
	display: none;
}
.tea_have{
	display: none;
}
.red_font{
	color: red;
}
.hb_have,.span_classromm,.span_teaName{
	display: none;
}
.mlh_classify {
	display: flex;
	align-items: center;
	justify-content:space-around;
}
.mlh_classify li{
	margin-top:45px;
	width: 320px;
	height: 280px;
	border: 1px solid #ececec;
	border-radius: 5px;
	cursor: pointer;
}
.mlh_classify li img{
	display: block;
	margin:35px auto;
	width: 140px;
	height: 140px;
}
.mlh_classify span{
	display:block;
	margin:0 auto;
	width: 139px;
	height: 34px;
	line-height: 34px;
	font-size: 16px;
	color: #1479bf;
	text-align: center;
	border: 1px solid #1479bf;
	border-radius: 5px;
}
.mlh_classify li:hover{
	border-color: #dbeef9;
	box-shadow:0px 0px 8px #dbeef9;
}
.mlh_classify li:hover  span{
	color: #fff;
	border-color: #399fdf;
	background: #399fdf;
}
