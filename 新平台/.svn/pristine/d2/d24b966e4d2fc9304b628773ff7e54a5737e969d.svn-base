<system nav="navShowDet"></system>
<style type="text/css">
	.wx_role_teacher p{margin:10px 0;}
</style>
<div>

	<div class="zy_cont_eight" style="width:1200px;">
		<div class="zy_per_info_head">
			<ul class="clearfix">
				<!--<li ng-class="{'active': personalInfoState == 0}" ng-click="personalInfoTab(0)">个人信息</li>
				<li ng-class="{'active': personalInfoState == 1}" ng-click="personalInfoTab(1)">子女资料</li>-->
			</ul>
		</div>
		<!--个人信息-->
		<div class="zy_pre_info_box" ng-show="personalInfoState == 0" style="width: 800px;margin:0 auto">
			<p class="zy_pre_info_tit">教师</p>
			<div class="zy_pre_info_cont">
				<ul class="">
					
					<li class="zy_pre_info_line">
						<p>真实姓名 <i class="star">*</i></p>
						<input type="text" name="" id="" value="" placeholder="请输入" />
					</li>
					<li class="zy_pre_info_line">
						<p>性别 <i class="star">*</i></p>
						<div class="zy_pre_info_sex">
							<input type="radio" name="per_sex" id="per_sex_male" value="男" />
							<label for="per_sex_male">男</label>
							<input type="radio" name="per_sex" id="per_sex_female" value="女" />
							<label for="per_sex_female">女</label>
						</div>
					</li>
					<li class="zy_pre_info_line">
						<p>民族 <i class="star">*</i></p>
						<select name="">
							<option value=""></option>
						</select>
					</li>
					<li class="zy_pre_info_line">
						<p>身份证号 <i class="star">*</i><strong class="error_prompt"></strong></p>
						<input type="text" name="" id="" value="" placeholder="请输入" />
					</li>
					<li class="zy_pre_info_line">
						<p>手机号 <i class="star">*</i><strong class="error_prompt"></strong></p>
						<input type="text" name="" id="" value="" placeholder="请输入" />
					</li>
					<li class="zy_pre_info_line">
						<p>邮箱 <i class="star">*</i><strong class="error_prompt"></strong></p>
						<input type="text" name="" id="" value="" placeholder="请输入" />
					</li>
					<li class="zy_pre_info_line">
						<p>单位名称 <i class="star">*</i><strong class="error_prompt"></strong></p>
						<input type="text" name="" id="" value="" placeholder="请输入" />
					</li>
					<li class="zy_pre_info_line">
						<p>教学角色 <i class="star">*</i><strong class="error_prompt"></strong></p>
						<div class="wx_role_teacher">
							<p><input type="checkbox" / id="xiaolingdao"><label for="xiaolingdao">校领导</label></p>
							<p><input type="checkbox" / id="xuekezuzhang"><label for="xuekezuzhang">学科组长</label><button class="wx_add_shouke_btn">选择学科</button></p>
							<p><input type="checkbox" / id="nianjizuzhang"><label for="nianjizuzhang">年级组长</label> 
								<select name="" style="width:150px;margin-left:20px;">
									<option value=""></option>
								</select>
							</p>
							<p><input type="checkbox" / id="banzhuren"><label for="banzhuren">班主任</label>
								<select name="" style="width:150px;margin-left:20px;">
									<option value=""></option>
								</select>
							</p>
							<p><input type="checkbox" / id="renkelaoshi"><label for="renkelaoshi">任课老师</label></p>
						</div>
					</li>
					<li class="zy_pre_info_line">
						<p>是否授课 <i class="star">*</i><strong class="error_prompt"></strong></p>
						<div class="zy_pre_info_sex">
							<input type="radio" name="per_shouke" id="yes_shouke" value="" />
							<label for="yes_shouke">是</label>
							<input type="radio" name="per_shouke" id="no_shouke" value="" />
							<label for="no_shouke">否</label>
							<button class="wx_add_shouke_btn">添加授课</button>
						</div>
					</li>
				</ul>
				<div class="zy_btn_group zy_btn_group_register">
					<button>马上注册</button>
				</div>
