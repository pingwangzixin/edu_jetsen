app.controller('helpCtrl',['$scope','$state','$timeout','$http','$location','$interval','templateServer',function($scope,$state,$timeout,$http,$location,$interval,templateServer) {
	
	//新手指南 常见问题
	$scope.state = {
		problem : 0,
		guide : 0
	}
	
	$scope.problemSwitch = function (i){
		$scope.state.problem = i;
	};
	$scope.guideSwitch = function (i){
		$scope.state.guide = i;
	};
	
}]);
