<script>
        $(function(){
            $(window).scroll(function(){
                var daynav=$(".zy_resources_relevant_box")
                var main=$(".zy_resources_detail_box");
                var maintop=main.offset().top;
                var winTop=$(window).height()
                var scrollTop=$(window).scrollTop()
                
                if(scrollTop>=maintop){
                    daynav.css({"position":"fixed","top":"0","margin-top":"0"})
                }else{
                    daynav.css({"position":"relative","margin-top":"20px"})
                }

            })
            
            $(".wx_fullscreen").on("click",function(){
            	$(".zy_resources_detail_cont").css({"position":"fixed","top":"0","left":"0","right":"0","bottom":"0","z-index":"100","overflow-y":"auto"});
            	$(".wx_backscreen").show();
            })
            
            $(".wx_backscreen").on("click",function(){
            	$(".zy_resources_detail_cont").css({"position":"relative"});
            	$(".wx_backscreen").hide();
            })
            
            $(window).keydown(function(){
            	var e = event || window.event 
            	if(e.keyCode==27){
            		$(".zy_resources_detail_cont").css({"position":"relative"});
            		$(".wx_backscreen").hide();
            	}
            })
            
        })
</script>