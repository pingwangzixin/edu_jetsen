.main .main_right{
	width:97%;
	padding-top:40px;
	margin:0 auto;
}
.main_right .list_tit li a.list_tit_active{
	width:122px;
	height:40px;
	line-height: 40px;
	text-align: center;
	border-bottom: none;
	padding:0;
	background: url(../img/main_tit.png) no-repeat center center;
}
.r_border{
	width:94%;
	border:7px solid #bfe1fb;
	background: #eaf4fc;
	margin-top:15px;
	box-sizing: border-box;
	padding:16px 22px;
	border-radius: 80px 106px 50px 50px ;
	position: relative;
	margin-bottom: 40px;
}
.r_border .xiaoboshi{
	width:113px;
	height:121px;
	position: absolute;
	top: -80px;
    right: -23px;
	background: url(../img/xiaoboshi.png) no-repeat center center;
}
.r_border_m_b{
	width:100%;
	border:1px dashed #fff;
	padding:30px;
	box-sizing: border-box;
	border-radius: 83px 105px 50px 50px ;
}
.task_list{
	width:100%;
	padding:0;
	margin:0;
	background: none;
	border:none;
}

/*资源查看 */
.rescourceBox{}
.rescource_title{
	height:50px;
	line-height: 50px;
}
.rescource_title_l{
	float:left;
	height:50px;
	line-height: 50px;
	font-size: 1.6rem;
	color:#6699ff;
	text-align: left;
}
.rescource_title_r{
	float:right;
	height:50px;
	line-height: 50px;
	font-size: 1.4rem;
}
.rescource_title_r span{
	color:#fe7273;
	padding-right:5px;
}
.rescource_title_r i.clock{
	color:#577eff;
	margin:0 10px;
	padding-left:20px;
	font-style: normal;
	background: url(../img/eye.png) no-repeat left center;
}
.rescource_title_r i.up{
	color:#22cfa1;
	padding-left:20px;
	font-style: normal;
	background: url(../img/up_bg.png) no-repeat left center;
}

/*资源查看样式*/
.rescourceCenter{
	min-height:410px;
}
.rescourceCenter .videoBox{
	width:68%;
	min-width:662px;
	float:left;
}
.rescourceCenter .videoBox .video{
	width:100%;
	min-width:662px;
	height:408px;
	overflow: auto;
	border:1px solid #fff;
	background: #ecf2fa;
}
.rescourceCenter .videoBox .video .smallPic{
	width: 200px;
    margin: 20px auto;
    display: block;
}
.rescourceCenter .videoBox .video .bigPic{
	width: 100%;
    margin: 80px auto;
    display: block;
}
.collectDow{
	padding-top:10px;
	height:24px;
	line-height: 24px;
}
.collectDow a{
	padding-left:24px;
	display: block;
	float:left;
	height:24px;
	color:#333;
}
.collectDow a.collect{
	margin-right:20px;
	background: url(../img/shoucang.png) no-repeat left center;
}
.collectDow a.dow{
	background: url(../img/dow2.png) no-repeat left center;
}
.descriptionBox{
	min-height:180px;
}
.descriptionLeft{
	float:left;
	min-width:490px;
	width:70%;
	color:#333;
	font-size: 1.4rem;
}
.descriptionLeftText strong{
	height:30px;
	line-height: 30px;
	font-size: 1.6rem;
	font-weight: normal;
}
.descriptionLeftText p{
	height:22px;
	line-height: 22px;
	font-size: 1.4rem;
}


.descriptionRight{
	float:right;
	min-width:112px;
	width:26%;
}
.descriptionRight img{
	display: block;
	width:112px;
	height:112px;
	margin:0 auto;
}
.descriptionRight a.share{
	width:107px;
	height:30px;
	line-height: 30px;
	display: block;
	margin:17px auto 0;
	background: #6699ff;
	border-radius: 10px;
	text-align: center;
	color:#fff;
	font-size: 1.6rem;
	cursor: default;
}


.rescourceCenter .postReply{
	width:30%;
	min-width:280px;
	height:598px;
	border:1px solid #fff;
	float:right;
	background: #f0f7fd;
}
.rescourceCenter .dialogueBox{
	height:340px;
	overflow: hidden;
}
.rescourceCenter .dialogueBox ul{
	height:290px;
	overflow: auto;
}
.rescourceCenter .dialogueBox ul li{
	padding:4px 8px;
	overflow: hidden;
}
.rescourceCenter .dialogueBox ul li  strong{
	float:left;
	color:#5093e1;
	font-weight: normal;
	text-align: left;
}
.rescourceCenter .dialogueBox ul li  span{
	padding:0 5px;
	float:left;
	color:#222;
	text-align: left;
}
.rescourceCenter .dialogueBox ul li  p{
	
	color:#222;
	text-align: left;
	word-break:break-all;
}
.rescourceCenter .dialogueBox a.more{
	padding:8px;
	float:right;
	font-size: 1.4rem;
	color:#5093e1;
}



.rescourceCenter .publicationBox{
	padding:0 8px;
}
.rescourceCenter .publicationBox textarea{
	width:100%;
	height:172px;
	box-sizing:border-box;
	padding-left:5px;
	background: #f8fbfe;
	font-size: 1.4rem;
	color:#333;
	line-height: 24px;
	border:none;
	outline: none;
}
.rescourceCenter .publicationBox .btn{
	min-width:264px;
	height:30px;
	margin-top:15px;
}
.rescourceCenter .publicationBox .btn button{
	width:68px;
	height:30px;
	border:none;
	border-radius: 5px;
	text-align: center;
	float:right;
	font-size: 1.4rem;
	color:#fff;
	background: #00cc99;
	cursor: pointer;
	outline: none;
}
.rescourceCenter .publicationBox .btn button:hover{
	background: #1df2bd;
}



